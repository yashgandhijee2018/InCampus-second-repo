<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/otp"
    tools:context=".OTP">

    <TextView
        android:id="@+id/VerifCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Verification Code"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <LinearLayout
        android:id="@+id/numberlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <EditText
            android:id="@+id/editTextone"
            android:layout_width="60sp"
            android:layout_height="90sp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/roundrect2"
            android:backgroundTint="@android:color/white"
            android:fontFamily="@font/montserrat_medium"
            android:inputType="number"
            android:maxLength="1"
            android:nextFocusRight="@+id/editText_two"
            android:paddingStart="20sp"
            android:paddingEnd="5sp"
            android:textSize="26sp">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/editTexttwo"
            android:layout_width="60sp"
            android:layout_height="90sp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/roundrect2"
            android:backgroundTint="@android:color/white"
            android:fontFamily="@font/montserrat_medium"
            android:inputType="number"
            android:maxLength="1"
            android:paddingStart="20sp"
            android:paddingEnd="5sp"
            android:textSize="26sp" />

        <EditText
            android:id="@+id/editTextthree"
            android:layout_width="60sp"
            android:layout_height="90sp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/roundrect2"
            android:backgroundTint="@android:color/white"
            android:fontFamily="@font/montserrat_medium"
            android:inputType="number"
            android:maxLength="1"
            android:paddingStart="20sp"
            android:paddingEnd="5sp"
            android:textSize="26sp" />

        <EditText
            android:id="@+id/editTextfour"
            android:layout_width="60sp"
            android:layout_height="90sp"
            android:background="@drawable/roundrect2"
            android:backgroundTint="@android:color/white"
            android:fontFamily="@font/montserrat_medium"
            android:inputType="number"
            android:maxLength="1"
            android:paddingStart="20sp"
            android:paddingEnd="5sp"
            android:textSize="26sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/resendcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:fontFamily="@font/montserrat_medium"
        android:text="Resend Code"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.378"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberlayout"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/quart_rect"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="Next"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="312dp" />

</androidx.constraintlayout.widget.ConstraintLayout>